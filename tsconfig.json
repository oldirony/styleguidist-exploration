{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist/lib/",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": false,
    "module": "esnext",
    "target": "es5",
    "jsx": "preserve",
    "lib": [
      "es2015",
      "dom",
      "scripthost"
    ],
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "./src/**/*"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useBabel": false
  }
}
